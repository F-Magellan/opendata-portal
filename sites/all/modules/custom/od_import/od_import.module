function od_import_parse_organization($org) {
  // Get organization url.
  if (empty($org->field_site_url[LANGUAGE_NONE][0])) {
    return FALSE;
  }

  $url = $org->field_site_url[LANGUAGE_NONE][0]['url'];


  $vars = array(
    'encoding' => 'Windows-1251',
  );

  $od_library = libraries_load('od_api');
  if (!$od_library['loaded']) {
    watchdog('od_import', 'Opendata API library not detected.');
    return FALSE;
  }

  $od = new OdApi();
  $data = $od->getOpendata($url, $vars);

  $errors = $od->getErrors();

  $error = (string) reset($errors);

  if (!is_array($data) || $errors) {
    watchdog('od_import', 'Parsing of %url failed: %error', array('%url' => $url, '%error' => $error));
    return FALSE;
  }

  foreach ($data as $meta) {
    od_import_create_dataset($meta, $org->nid);
  }

  watchdog('od_import', 'Parsing of %url successfully finished.', array('%url' => $url));
  return TRUE;
}

